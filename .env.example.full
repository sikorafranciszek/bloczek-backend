# Przyk≈Çadowy plik .env z konfiguracjƒÖ Cloudflare R2
# Skopiuj ten plik jako .env i uzupe≈Çnij rzeczywiste warto≈õci

APP_NAME=BloczekBackend
APP_ENV=local
APP_KEY=base64:your-app-key-generate-with-php-artisan-key-generate
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Baza danych SQLite (domy≈õlnie)
DB_CONNECTION=sqlite
# ≈öcie≈ºka jest automatycznie ustawiona na database/database.sqlite

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Redis (opcjonalne)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email (dla developmentu u≈ºywamy log)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@bloczek.pl"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (opcjonalne - je≈õli nie u≈ºywasz R2)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# üî• KONFIGURACJA CLOUDFLARE R2 - WYPE≈ÅNIJ TE WARTO≈öCI! üî•
# Jak uzyskaƒá te warto≈õci - sprawd≈∫ plik CLOUDFLARE_R2_SETUP.md

# 1. Access Key ID - z R2 API tokens
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id-here

# 2. Secret Access Key - z R2 API tokens  
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key-here

# 3. Nazwa bucketa utworzonego w R2
CLOUDFLARE_R2_BUCKET=bloczek-products

# 4. Endpoint - zamie≈Ñ 'your-account-id' na tw√≥j Account ID z Cloudflare
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# 5. URL publiczny - to mo≈ºe byƒá:
# - https://pub-xyz.r2.dev (automatyczny URL bucketa)
# - https://cdn.twoja-domena.com (custom domain - zalecane)
CLOUDFLARE_R2_URL=https://pub-xyz.r2.dev

# Vite
VITE_APP_NAME="${APP_NAME}"

